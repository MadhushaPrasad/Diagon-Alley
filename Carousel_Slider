1. HTML Structure

<section class="other-books my-8">
  <h2 class="text-2xl font-semibold mb-4">Other Books You Might Like</h2>
  
  <div class="relative">
    <!-- Carousel container -->
    <div id="booksCarousel" class="flex overflow-x-auto gap-4 scrollbar-hide scroll-smooth">
      <!-- Single Book Card -->
      <div class="min-w-[200px] flex-shrink-0 bg-white rounded-lg shadow-md p-4">
        <img src="book1.jpg" alt="Book 1" class="w-full h-48 object-cover rounded-md mb-2">
        <h3 class="font-medium text-lg">Book Title 1</h3>
        <p class="text-sm text-gray-500">Author Name</p>
      </div>

      <div class="min-w-[200px] flex-shrink-0 bg-white rounded-lg shadow-md p-4">
        <img src="book2.jpg" alt="Book 2" class="w-full h-48 object-cover rounded-md mb-2">
        <h3 class="font-medium text-lg">Book Title 2</h3>
